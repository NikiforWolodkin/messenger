<UserControl x:Class="Messenger.Views.Settings.ReportsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Messenger.Views.Settings"
             xmlns:utils="clr-namespace:Messenger.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Margin="27,7,0,0" Text="Жалобы"
                       FontSize="22"
                       FontFamily="/Resources/Fonts/#Manrope Medium"/>

        </StackPanel>

        <ListBox Style="{StaticResource ListBox}"
                 ItemsSource="{Binding Messages}"
                 Grid.Row="1"
                 x:Name="messagesList"
                 utils:ListBoxExtensions.AutoScrollToEnd="True"
                 ScrollViewer.VerticalScrollBarVisibility="Hidden"
                 ScrollViewer.HorizontalScrollBarVisibility="Hidden">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="7,0,7,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Image Width="40" Height="40"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               VerticalAlignment="Bottom"
                               Stretch="UniformToFill" 
                               Grid.RowSpan="2">
                            <Image.Clip>
                                <EllipseGeometry RadiusX="20" RadiusY="20" Center="20,20"/>
                            </Image.Clip>

                            <Image.Source>
                                <BitmapImage RenderOptions.BitmapScalingMode="HighQuality" UriSource="{Binding AuthorAvatarUrl}" />
                            </Image.Source>
                        </Image>

                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal"
                                    Margin="20,-5,0,0">
                            <TextBlock Text="{Binding AuthorName}" 
                                       VerticalAlignment="Top"
                                       FontSize="16"/>

                            <TextBlock Text="{Binding SendTime, StringFormat=t}"
                                       Foreground="{StaticResource LessLightGrayBrush}"
                                       VerticalAlignment="Top"
                                       FontSize="16"
                                       Margin="10,0,10,0"/>
                        </StackPanel>

                        <Grid Grid.Row="1" Grid.Column="1"
                              Margin="10,2,0,0">

                            <Border Background="{StaticResource DarkGrayBrush}"
                                    CornerRadius="5"
                                    Grid.RowSpan="2"/>

                            <TextBlock Text="{Binding Text}"
                                       TextWrapping="Wrap"
                                       Margin="10,4,10,4"
                                       MaxWidth="584" />

                            <Image Source="{Binding ImageUrl}"
                                   Margin="10"
                                   MaxHeight="320"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="1"
                                    Grid.Column="2">
                            <Button Command="{Binding Path=DataContext.DismissReportCommand, ElementName=messagesList}"
                                    CommandParameter="{Binding}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Button.Template>

                                <Image Source="/Resources/Icons/Minus.png"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       Grid.Row="1"
                                       Grid.Column="2"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       Width="20"
                                       Height="20" />
                            </Button>

                            <Button Command="{Binding Path=DataContext.DeleteMessageCommand, ElementName=messagesList}"
                                    CommandParameter="{Binding}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Button.Template>

                                <Image Source="/Resources/Icons/Delete.png"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       Grid.Row="1"
                                       Grid.Column="2"
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"
                                       Width="24"
                                       Height="24" />
                            </Button>

                            <Button Command="{Binding Path=DataContext.DeleteAndBanUserCommand, ElementName=messagesList}"
                                    CommandParameter="{Binding}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Button.Template>

                                <Image Source="/Resources/Icons/Ban.png"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       Grid.Row="1"
                                       Grid.Column="2"
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"
                                       Width="24"
                                       Height="24" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <ListBox.Resources>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.Resources>
        </ListBox>

    </Grid>
</UserControl>
