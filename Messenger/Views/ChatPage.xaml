<UserControl x:Class="Messenger.Views.ChatPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Messenger.Views"
             xmlns:utils="clr-namespace:Messenger.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <utils:FileExtensionConverter x:Key="FileConverter" />
        <utils:FilePathToFileNameConverter x:Key="NameConverter" />
    </UserControl.Resources>

    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="675" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ListBox Style="{StaticResource ListBox}"
                 ItemsSource="{Binding Messages}"
                 SelectedItem="{Binding SelectedItem}"
                 Width="675"
                 Grid.Column="1"
                 x:Name="messagesList"
                 utils:ListBoxExtensions.AutoScrollToEnd="True"
                 ScrollViewer.VerticalScrollBarVisibility="Hidden"
                 ScrollViewer.HorizontalScrollBarVisibility="Hidden">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid MaxWidth="655"
                          Margin="10,0,10,2">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding BelongsToCurrentUser}" Value="True">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <Grid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Пожаловаться" Click="ReportClicked" />
                                <MenuItem Header="Удалить" Click="DeleteClicked" />
                            </ContextMenu>
                        </Grid.ContextMenu>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <!--Avatar-->
                        <Image Width="40" Height="40"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               VerticalAlignment="Bottom"
                               Stretch="UniformToFill" 
                               Margin="0,0,10,0"
                               Grid.RowSpan="2">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Setter Property="Clip">
                                        <Setter.Value>
                                            <EllipseGeometry RadiusX="20" RadiusY="20" Center="20,20"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding BelongsToCurrentUser}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>

                            <Image.Source>
                                <BitmapImage RenderOptions.BitmapScalingMode="HighQuality" UriSource="{Binding AuthorAvatarUrl}" />
                            </Image.Source>
                        </Image>
                        
                        <!--Header with name-->
                        <TextBlock Grid.Column="1"
                                   Text="{Binding AuthorName}" 
                                   VerticalAlignment="Top"
                                   Margin="10,4,10,0"
                                   FontSize="16">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding BelongsToCurrentUser}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding BelongsToCurrentUser}" Value="True">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!--Message content-->
                        <Grid Grid.Row="1" 
                              Grid.Column="1"
                              MaxWidth="555"
                              Margin="0,2,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            
                            <Border CornerRadius="5" Grid.RowSpan="2">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding BelongsToCurrentUser}" Value="True">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#1A1460" Offset="0.0"/>
                                                            <GradientStop Color="#2D2591" Offset="0.5"/>
                                                            <GradientStop Color="{StaticResource Purple}" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>

                            <!--Text-->
                            <TextBlock Text="{Binding Text}"
                                       MaxWidth="505"
                                       TextWrapping="Wrap"
                                       Margin="10,4,10,4" />

                            <!--Image-->
                            <Image Source="{Binding ImageUrl}"
                                   Margin="10"
                                   MaxHeight="320"
                                   RenderOptions.BitmapScalingMode="HighQuality">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ImageUrl, Converter={StaticResource FileConverter}}" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>

                            <!--Download button-->
                            <StackPanel Orientation="Horizontal">
                                <Button Command="{Binding Path=DataContext.DownloadAttachmentCommand, ElementName=messagesList}"
                                        CommandParameter="{Binding ImageUrl}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Button.Template>
                                    <Image Source="/Resources/Icons/Attachment.png"
                                           RenderOptions.BitmapScalingMode="HighQuality"
                                           Width="20"
                                           Height="20"
                                           Margin="10,0,0,0"/>
                                </Button>

                                <!--Attachment name-->
                                <TextBlock Text="{Binding ImageUrl, Converter={StaticResource NameConverter}}"
                                           Foreground="White"
                                           FontFamily="/Resources/Fonts/#Manrope Regular"
                                           FontSize="16"
                                           TextWrapping="Wrap"
                                           MaxWidth="505"
                                           Margin="10,4,10,4"
                                           VerticalAlignment="Center"/>

                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ImageUrl, Converter={StaticResource FileConverter}}" Value="False">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                            </StackPanel>

                            <!--Time-->
                            <TextBlock Grid.Row="1"
                                       HorizontalAlignment="Right"
                                       Foreground="{StaticResource LessLightGrayBrush}"
                                       VerticalAlignment="Top"
                                       FontSize="12"
                                       Margin="10,-6,10,2">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding SendTime, StringFormat=HH:mm}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsFromToday}" Value="False">
                                                <Setter Property="Text" Value="{Binding SendTime, StringFormat= dd.MM.yy HH:mm}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <!--Like button-->
                        <Grid Margin="5,0"
                              Grid.Row="1">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Grid.Column" Value="2" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding BelongsToCurrentUser}" Value="True">
                                            <Setter Property="Grid.Column" Value="0"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            
                            <Button Command="{Binding Path=DataContext.LikeMessageCommand, ElementName=messagesList}"
                                    CommandParameter="{Binding}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Button.Template>

                                <Image RenderOptions.BitmapScalingMode="HighQuality"
                                       Grid.Row="1"
                                       Grid.Column="2"
                                       VerticalAlignment="Center"
                                       Width="20"
                                       Height="20">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="/Resources/Icons/Like.png" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsLiked}" Value="True">
                                                    <Setter Property="Source" Value="/Resources/Icons/Like_filled.png" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                            </Button>

                            <TextBlock Grid.Column="1"
                                       HorizontalAlignment="Center"
                                       Text="{Binding LikeAmount}"/>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <ListBox.Resources>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.Resources>
        </ListBox>

        <Grid Grid.Row="1" Grid.Column="1" Height="60">
            <Grid Margin="10">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBlacklisted}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <Border Background="{StaticResource BackgroundLightBrush}" 
                        CornerRadius="5"
                        Grid.ColumnSpan="2"/>

                <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
                         Background="Transparent"
                         BorderBrush="Transparent"
                         BorderThickness="0"
                         Foreground="White"
                         VerticalAlignment="Center"
                         FontSize="16"
                         FontFamily="/Resources/Fonts/#Manrope Regular"
                         Margin="15,0,15,0">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAttachmentAdded}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                    <TextBox.InputBindings>
                        <KeyBinding Command="{Binding SendMessageCommand}" Key="Enter"/>
                    </TextBox.InputBindings>
                </TextBox>

                <StackPanel Orientation="Horizontal">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAttachmentAdded}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Image Source="/Resources/Icons/Image.png"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           Width="20"
                           Height="20"
                           Margin="15,0,0,0"
                           VerticalAlignment="Center"/>

                    <TextBlock Text="{Binding AttachmentName}"
                               Foreground="White"
                               FontFamily="/Resources/Fonts/#Manrope Regular"
                               FontSize="16"
                               Margin="15,0,15,0"
                               VerticalAlignment="Center"/>
                </StackPanel>


                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Image Source="/Resources/Icons/Timer.png"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           Width="20"
                           Height="20"
                           Margin="0,0,10,0">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSelfDeletionTimeSet}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <Button Command="{Binding AddAttachmentCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAttachmentAdded}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Button.Template>
                        <Image Source="/Resources/Icons/Attachment.png"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Width="20"
                               Height="20"
                               Margin="0,0,10,0"/>
                    </Button>

                    <Button Command="{Binding RemoveAttachmentCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAttachmentAdded}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Button.Template>
                        <Image Source="/Resources/Icons/Minus.png"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Width="20"
                               Height="20"
                               Margin="0,0,10,0"/>
                    </Button>

                    <Button Style="{StaticResource SendButton}"
                            Command="{Binding SendMessageCommand}"
                            Margin="0,0,10,0">
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить через 15 мин." Command="{Binding SetSelfDeletionTimeCommand}" CommandParameter="15" />
                                <MenuItem Header="Удалить через 30 мин." Command="{Binding SetSelfDeletionTimeCommand}" CommandParameter="30" />
                                <MenuItem Header="Удалить через час" Command="{Binding SetSelfDeletionTimeCommand}" CommandParameter="60" />
                                <MenuItem Header="Удалить через 8 часов" Command="{Binding SetSelfDeletionTimeCommand}" CommandParameter="480" />
                                <Separator />
                                <MenuItem Header="Не удалять" Command="{Binding SetSelfDeletionTimeCommand}" CommandParameter="{x:Null}" />
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>

                </StackPanel>

            </Grid>

            <TextBlock 
                Text="Этот чат недоступен из-за политики черного списка.">
                <TextBlock.Style>
                    <Style TargetType="TextBlock" >
                        <Setter Property="HorizontalAlignment" Value="Center" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="FontSize" Value="18" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBlacklisted}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
    </Grid>
</UserControl>
